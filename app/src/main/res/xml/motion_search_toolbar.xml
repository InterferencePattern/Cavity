<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000" />

    <!-- TODO: check icon size with higher toolbars (tablet) -->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/fakeToolbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/toggleBackdrop"
            android:layout_width="@dimen/medium_icon"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/searchButton"
            android:layout_width="@dimen/medium_icon"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/toggleBackdrop"
            motion:layout_constraintTop_toTopOf="parent"
            motion:transitionEasing="decelerate" />
        <Constraint
            android:id="@id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="gone"
            motion:layout_constraintEnd_toStartOf="@id/toggleBackdrop"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/fakeToolbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:translationX="-1000dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/toggleBackdrop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/searchButton"
            android:layout_width="@dimen/medium_icon"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:transitionEasing="decelerate" />
        <Constraint
            android:id="@id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:visibility="visible"
            motion:layout_constraintEnd_toStartOf="@id/toggleBackdrop"
            motion:layout_constraintStart_toEndOf="@id/searchButton" />
    </ConstraintSet>
</MotionScene>
