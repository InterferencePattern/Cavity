<resources>
    <!-- Base application theme. -->
    <style name="CavityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cavity_gold</item>
        <item name="colorAccent">@color/cavity_gold</item>
        <item name="colorSecondary">@color/cavity_gold</item>

        <item name="android:statusBarColor">?attr/colorPrimarySurface</item>
        <item name="android:popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
    </style>

    <!-- Scrollable tab -->
    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Button" />

    <!-- Grouped button -->
    <style name="Widget.Cavity.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- SearchView -->
    <style name="Widget.Cavity.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
        <item name="android:closeIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Cavity.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:background">?attr/colorOnBackground</item>
        <item name="android:alpha">0.20</item>
    </style>

    <style name="Widget.Cavity.Divider.Start">
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
    </style>
</resources>
