<resources>
    <!-- Base application theme. -->
    <style name="CavityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Scrollable tab -->
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button" />

    <!-- Grouped button -->
    <style name="Widget.Cavity.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Shape -->
    <!-- Backdrop front layer shape -->
    <style name="Cavity.Backdrop" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Cavity.ShapeOverlay.BottomSheet</item>
    </style>

    <style name="Cavity.ShapeOverlay.BottomSheet" parent="">
    </style>
</resources>
