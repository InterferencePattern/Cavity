<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Used only in drawer -->
    <style name="TextAppearance.Cavity.Headline3" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.4</item>
    </style>

    <style name="TextAppearance.Cavity.Headline4" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/josefin_sans_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="TextAppearance.Cavity.Headline5" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.Cavity.Headline6" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/josefin_sans_thin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Cavity.Subtitle1" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/subtitle1TextSize</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.Cavity.Subtitle2" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Custom style for DialogTitle, since letterSpacing seems to run textAllCaps crazy -->
    <style name="TextAppearance.Cavity.SubtitleDialog" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textSize">@dimen/subtitle1TextSize</item>
    </style>

    <style name="TextAppearance.Cavity.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">@dimen/body1TextSize</item>
    </style>

    <style name="TextAppearance.Cavity.Body2.Italic" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">@dimen/body2TextSize</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--    Snackbar, Dialog text & list-->
    <style name="TextAppearance.Cavity.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">@dimen/body2TextSize</item>
    </style>

    <!-- Could be Forum 20sp || josefin semi bold 15sp -->
    <style name="TextAppearance.Cavity.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.Cavity.Overline" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cavity.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">15sp</item>
    </style>

    <dimen name="body1TextSize">18sp</dimen>
    <dimen name="body2TextSize">16.5sp</dimen>
    <dimen name="subtitle1TextSize">15sp</dimen>
    <dimen name="smallerButtonsSize">17sp</dimen>
</resources>
