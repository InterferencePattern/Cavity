<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/starred"
        android:drawable="@drawable/ic_star"
        android:state_activated="true" />

    <item
        android:id="@+id/unstar"
        android:drawable="@drawable/ic_star_outline" />

    <transition
        android:drawable="@drawable/anim_star"
        android:fromId="@id/unstar"
        android:toId="@id/starred" />

    <transition
        android:drawable="@drawable/anim_unstar"
        android:fromId="@id/starred"
        android:toId="@id/unstar" />

</animated-selector>
