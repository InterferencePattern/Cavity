<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/check"
        android:drawable="@drawable/ic_check"
        android:state_activated="true" />

    <item
        android:id="@+id/next"
        android:drawable="@drawable/ic_next" />

    <transition
        android:drawable="@drawable/anim_check_next"
        android:fromId="@id/check"
        android:toId="@id/next" />

    <transition
        android:drawable="@drawable/anim_next_check"
        android:fromId="@id/next"
        android:toId="@id/check" />

</animated-selector>
