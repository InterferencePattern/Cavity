<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.louis.app.cavity.ui.home.FragmentHome"
        android:label="FragmentHome"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/showSettings"
            app:destination="@id/settings_dest" />
        <action
            android:id="@+id/show_addBottle"
            app:destination="@id/fragmentAddBottle" />
    </fragment>

    <fragment
        android:id="@+id/settings_dest"
        android:name="com.louis.app.cavity.ui.settings.FragmentSettings"
        android:label="FragmentSettings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/fragmentAddBottle"
        android:name="com.louis.app.cavity.ui.home.FragmentAddBottle"
        android:label="FragmentAddBottle" />

</navigation>