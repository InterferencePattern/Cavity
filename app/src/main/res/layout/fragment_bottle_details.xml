<?xml version="1.0" encoding="utf-8"?>

<!-- Coordinator layout just for snackbars -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_collapsible_toolbar">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            app:layoutDescription="@xml/motion_collapsible_toolbar_header">

            <ImageView
                android:id="@+id/bottlePicture"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/medium_icon"
                android:layout_height="@dimen/medium_icon"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_uncover"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/actionBarItemBackground"
                android:src="@drawable/ic_arrow_back"
                android:tint="?attr/colorControlNormal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/centerHelper"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/bottleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorOnSurface"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Domaine F. Engel" />

            <TextView
                android:id="@+id/bottleVintage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="2016" />

            <View
                android:id="@+id/shaper"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEditBottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:contentDescription="@string/edit_bottle"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/bottleVintage"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.motion.widget.MotionLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/bottlesScrollView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/bottlesChipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:singleSelection="true" />

                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/buttonGroupInteract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bottlesScrollView">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonConsume"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:text="@string/taste"
                        app:icon="@drawable/ic_glass" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonGiftTo"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:text="@string/gift_to"
                        app:icon="@drawable/ic_gift" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consumedBanner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:background="@color/cavity_red"
                    android:padding="@dimen/small_margin"
                    android:textColor="?attr/colorOnError"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Cette bouteille à été consommée."
                        android:textColor="?attr/colorOnError"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/buttonRevertConsumption"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRevertConsumption"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Annuler"
                        android:textColor="?attr/colorOnError"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rippleColor="?attr/colorOnError" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierAllowsGoneWidgets="false"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="consumedBanner,buttonGroupInteract" />

                <!-- Step 1 info, grapes -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/grapesCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_marginVertical="@dimen/medium_margin"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/grapeTitleIcon"
                            android:layout_width="@dimen/small_icon"
                            android:layout_height="@dimen/small_icon"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@drawable/ic_grape"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/grapeTitle"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="@string/grapes"
                            app:layout_constraintBottom_toBottomOf="@id/grapeTitleIcon"
                            app:layout_constraintStart_toEndOf="@id/grapeTitleIcon"
                            app:layout_constraintTop_toTopOf="@id/grapeTitleIcon" />

                        <com.louis.app.cavity.ui.bottle.widget.GrapeBar
                            android:id="@+id/grapeBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/miscCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_marginVertical="@dimen/medium_margin"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/grapesCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/miscTitleIcon"
                            android:layout_width="@dimen/small_icon"
                            android:layout_height="@dimen/small_icon"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@drawable/ic_info"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/miscTitle"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="@string/misc"
                            app:layout_constraintBottom_toBottomOf="@id/miscTitleIcon"
                            app:layout_constraintStart_toEndOf="@id/miscTitleIcon"
                            app:layout_constraintTop_toTopOf="@id/miscTitleIcon" />

                        <com.louis.app.cavity.ui.bottle.widget.LabeledData
                            android:id="@+id/apogee"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            android:layout_marginVertical="@dimen/medium_margin"
                            app:icon="@drawable/ic_glass"
                            app:label="@string/apogee"
                            app:layout_constraintEnd_toStartOf="@id/price"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/miscTitleIcon" />

                        <com.louis.app.cavity.ui.bottle.widget.LabeledData
                            android:id="@+id/price"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            android:layout_marginVertical="@dimen/medium_margin"
                            app:icon="@drawable/ic_coin_stack"
                            app:label="@string/price"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/apogee"
                            app:layout_constraintTop_toBottomOf="@id/miscTitleIcon" />

                        <com.louis.app.cavity.ui.bottle.widget.LabeledData
                            android:id="@+id/buyLocation"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            android:layout_marginVertical="@dimen/medium_margin"
                            app:icon="@drawable/ic_location"
                            app:label="@string/buying_location"
                            app:layout_constraintEnd_toStartOf="@id/buyDate"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/apogee" />

                        <com.louis.app.cavity.ui.bottle.widget.LabeledData
                            android:id="@+id/buyDate"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            android:layout_marginVertical="@dimen/medium_margin"
                            app:icon="@drawable/ic_calendar"
                            app:label="@string/buying_date"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/buyLocation"
                            app:layout_constraintTop_toBottomOf="@id/price" />

                        <com.louis.app.cavity.ui.bottle.widget.LabeledData
                            android:id="@+id/otherInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/medium_margin"
                            app:icon="@drawable/ic_comment"
                            app:label="@string/other_info"
                            app:layout_constraintEnd_toEndOf="@id/buyDate"
                            app:layout_constraintStart_toStartOf="@id/buyLocation"
                            app:layout_constraintTop_toBottomOf="@id/buyLocation" />

                        <com.louis.app.cavity.ui.search.widget.AnimatedCheckBox
                            android:id="@+id/favorite"
                            android:layout_width="@dimen/medium_icon"
                            android:layout_height="@dimen/medium_icon"
                            android:scaleType="centerInside"
                            android:src="@drawable/asl_favorite"
                            app:delayBeforeRepeat="1001"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonShowPdf"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:text="@string/show_pdf"
                            app:icon="@drawable/ic_pdf"
                            app:layout_constraintEnd_toEndOf="@id/price"
                            app:layout_constraintStart_toStartOf="@id/apogee"
                            app:layout_constraintTop_toBottomOf="@id/otherInfo" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonShowHistory"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xsmall_margin"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:text="@string/show_history"
                            app:icon="@drawable/ic_history"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/price"
                            app:layout_constraintStart_toStartOf="@id/apogee"
                            app:layout_constraintTop_toBottomOf="@id/buttonShowPdf" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reviewCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_marginVertical="@dimen/medium_margin"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/miscCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/reviewTitleIcon"
                            android:layout_width="@dimen/small_icon"
                            android:layout_height="@dimen/small_icon"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@drawable/ic_contest"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/reviewTitle"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="@string/expert_advice"
                            app:layout_constraintBottom_toBottomOf="@id/reviewTitleIcon"
                            app:layout_constraintStart_toEndOf="@id/reviewTitleIcon"
                            app:layout_constraintTop_toTopOf="@id/reviewTitleIcon" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/reviewRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="@dimen/small_margin"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/reviewTitleIcon"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_show_review_medal"
                            tools:orientation="horizontal" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/divider"
                    style="@style/Widget.Cavity.Divider"
                    android:layout_marginTop="@dimen/large_margin"
                    app:layout_constraintTop_toBottomOf="@id/reviewCardView" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUltraDelete"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:text="@string/delete_bottle"
                    app:icon="@drawable/ic_delete_all"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:text="@string/delete_bottle_warning"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonUltraDelete" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
