<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layoutDescription="@xml/motion_collapsible_toolbar">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:background="?attr/colorSurface"
        app:layoutDescription="@xml/motion_collapsible_toolbar_header">

        <ImageView
            android:id="@+id/bottlePicture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pine_branch" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/medium_icon"
            android:layout_height="@dimen/medium_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/colorControlNormal"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_step"
            android:backgroundTint="#20000000"
            android:foreground="?attr/actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back" />

        <View
            android:id="@+id/centerHelper"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/bottleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Domaine F. Engel"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnPrimary"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bottleVintage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2016"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/shaper"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_curve" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEditBottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@id/shaper"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/wineImage"
                android:layout_width="140dp"
                android:layout_height="190dp"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- ShapeableImageView ? -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/cavity_green" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Step 1 info, grapes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/globalCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wineImage">

                <com.louis.app.cavity.ui.bottle.GrapeBar
                    android:id="@+id/grapeBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/buttonEditBottle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trigger grapebar" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/expertAdviceCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/globalCardView">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/expertAdviceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Other info, wine pdf, taste comment -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/miscellaneousCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expertAdviceCardView">

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/long_text"
                app:layout_constraintTop_toBottomOf="@id/miscellaneousCardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>
