<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wineNaming"
        style="?attr/textAppearanceCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintEnd_toStartOf="@id/wineImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/wineImage"
        tools:text="Gewurztraminer" />

    <TextView
        android:id="@+id/wineName"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@id/wineImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wineNaming"
        tools:text="Domaine F. Engel" />

    <TextView
        android:id="@+id/wineVintage"
        style="?attr/textAppearanceHeadline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        app:layout_constraintEnd_toStartOf="@id/wineImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wineName"
        tools:text="2016" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wineImage"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_margin="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ShapeableImageView ? -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/cavity_green" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Step 1 info, grapes -->
