<?xml version="1.0" encoding="utf-8"?>
<com.louis.app.cavity.ui.home.widget.HexagonalView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    app:flat="false"
    app:strokeColor="@color/cavity_gold"
    app:strokeWidth="1dp">

    <ImageView
        android:id="@+id/wineImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/wine_photo"
        tools:src="@drawable/ic_list_check" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!--        <View-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:alpha="0.12"-->
        <!--            android:background="@android:color/black"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <!--            android:shadowColor="@android:color/black"-->
        <!--            android:shadowDx="2"-->
        <!--            android:shadowDy="2"-->
        <!--            android:shadowRadius="6"-->
        <TextView
            android:id="@+id/wineNaming"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginBottom="@dimen/xsmall_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            tools:text="Saint-Émilion" />

        <TextView
            android:id="@+id/wineName"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginTop="@dimen/xsmall_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            tools:text="Château la Cour" />

        <TextView
            android:id="@+id/vintages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/organicImage"
        android:layout_width="@dimen/xsmall_icon"
        android:layout_height="@dimen/xsmall_icon"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/bio_wine"
        android:src="@drawable/ic_bio"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bottles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/medium_margin"
        android:contentDescription="@string/bio_wine"
        android:drawableLeft="@drawable/ic_glass"
        android:drawableRight="@drawable/ic_bio"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_gravity="bottom|center_horizontal"
        android:text="3" />

</com.louis.app.cavity.ui.home.widget.HexagonalView>
